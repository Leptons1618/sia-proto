[package]
name = "common"
version = "0.1.0"
edition = "2021"

[dependencies]
serde = { version = "1.0", features = ["derive"] }
serde_toon = "0.1" # placeholder; if not available replace with serde_json during early prototyping
anyhow = "1.0"
chrono = { version = "0.4", features = ["serde"] }
hmac = "0.12"
sha2 = "0.10"
base64 = "0.21"

[lib]
name = "common"
path = "src/lib.rs"
